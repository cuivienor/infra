# shellcheck shell=bash
# Infra development environment
# Loaded automatically by direnv when entering this directory

# Load Nix devShell (terraform, ansible, sops, etc.)
# Requires: nix with flakes enabled
if command -v nix &> /dev/null; then
  use flake
fi

# Secrets paths
export SOPS_AGE_KEY_FILE="$PWD/terraform/.sops-key"
export ANSIBLE_VAULT_PASSWORD_FILE="$PWD/ansible/.vault_pass"
