[Unit]
Description=Authelia authentication and authorization server
After=network.target

[Service]
Type=simple
User={{ authelia_user }}
Group={{ authelia_group }}
ExecStart=/usr/local/bin/authelia --config {{ authelia_config_dir }}/configuration.yml
Restart=on-failure
RestartSec=5

# Security hardening
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths={{ authelia_data_dir }}

[Install]
WantedBy=multi-user.target
