# Environment variables for wishlist application
# Managed by Ansible - DO NOT EDIT MANUALLY

# Application configuration
PORT={{ wishlist_port }}
ORIGIN={{ wishlist_origin }}
TOKEN_TIME={{ wishlist_token_time }}
DEFAULT_CURRENCY={{ wishlist_default_currency }}

# Database
DATABASE_URL=file:{{ wishlist_db_path }}

# Node.js
NODE_ENV=production

# Header-based authentication (Authelia integration)
{% if wishlist_header_auth_enabled %}
HEADER_AUTH_ENABLED=true
HEADER_USERNAME={{ wishlist_header_username }}
HEADER_NAME={{ wishlist_header_name }}
HEADER_EMAIL={{ wishlist_header_email }}
{% endif %}
