[Unit]
Description=Restic backup - {{ item.name }} policy
After=network-online.target
Wants=network-online.target

[Service]
Type=oneshot
ExecStart={{ restic_config_dir }}/scripts/backup-{{ item.name }}.sh
User=root
Group=root

# Security hardening
PrivateTmp=yes
NoNewPrivileges=yes
ProtectSystem=strict
ProtectHome=read-only
ReadWritePaths={{ restic_cache_dir }} {{ restic_log_dir }}

# Timeout (adjust based on backup size)
TimeoutStartSec=0

# Resource limits
Nice={{ restic_nice_level }}
IOSchedulingClass={{ restic_ionice_class }}

[Install]
WantedBy=multi-user.target
